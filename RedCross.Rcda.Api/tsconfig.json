{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "strictNullChecks": true,
        "outDir": "bin",
        "baseUrl": "./src",
        "paths": {
            "@/*": [ "./*" ],
            "RedCross.Rcda.Common/*": [ "../../RedCross.Rcda.Common/bin/*" ]
        }
    },
    "include": [
        "./src/**/*.ts"
    ],
    "references": [
        { "path": "../RedCross.Rcda.Common" }
    ]
}