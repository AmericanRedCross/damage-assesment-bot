{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionAppName": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "cosmosAccountName": {
            "type": "string"
        },
        "microsoftAppId": {
            "type": "securestring"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true,
                            "lastEnabledTime": "2018-10-07T00:43:29.1745736Z"
                        },
                        "blob": {
                            "enabled": true,
                            "lastEnabledTime": "2018-10-07T00:43:29.1745736Z"
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "kind": "functionapp",
            "name": "[parameters('functionAppName')]",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "properties": {
                "name": "[parameters('functionAppName')]"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-02-01",
            "name": "[parameters('functionAppName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('functionAppName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "name": "[parameters('functionAppName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',parameters('functionAppName'))]",
                "siteConfig": {
                    "use32BitWorkerProcess": false,
                    "cors": {
                        "allowedOrigins": [
                            "*"
                        ]
                    }
                }
            },
            "resources": [
                {
                    "apiVersion": "2018-02-01",
                    "name": "swap",
                    "type": "slots",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('functionAppName'))]"
                    ],
                    "properties": {
                        "siteConfig": {
                            "use32BitWorkerProcess": false,
                            "cors": {
                                "allowedOrigins": [
                                    "*"
                                ]
                            },
                            "slotConfigNames": {
                                "appSettingNames": [
                                    "TestStickySettings"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        {
            "apiVersion": "2015-05-01",
            "name": "[parameters('functionAppName')]",
            "type": "Microsoft.Insights/components",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
            ],
            "properties": {
                "ApplicationId": "[parameters('functionAppName')]"
            }
        },
        {
            "apiVersion": "2016-03-31",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "kind": "GlobalDocumentDB",
            "name": "[parameters('cosmosAccountName')]",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[parameters('cosmosAccountName')]",
                "databaseAccountOfferType": "Standard",
                "locations": [
                    {
                        "locationName": "[parameters('location')]",
                        "failoverPriority": 0
                    },
                    {
                        "locationName": "[parameters('location')]",
                        "failoverPriority": 1
                    }
                ],
                "capabilities": []
            }
        },
        {
            "apiVersion": "2018-07-12",
            "name": "[parameters('functionAppName')]",
            "type": "Microsoft.BotService/botServices",
            "location": "global",
            "sku": {
                "name": "S1"
            },
            "kind": "function",
            "properties": {
                "displayName": "[parameters('functionAppName')]",
                "description": "",
                "iconUrl": "//bot-framework.azureedge.net/bot-icons-v1/bot-framework-default.png",
                "endpoint": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/api/chat/messages')]",
                "msaAppId": "[parameters('microsoftAppId')]",
                "developerAppInsightKey": "[reference(resourceId('Microsoft.Insights/components', parameters('functionAppName')), '2015-05-01').InstrumentationKey]",
                "developerAppInsightsApplicationId": "[reference(resourceId('Microsoft.Insights/components', parameters('functionAppName')), '2015-05-01').AppId]",
                "luisAppIds": [],
                "endpointVersion": null,
                "configuredChannels": [],
                "enabledChannels": [
                    "webchat",
                    "directline"
                ],
                "isDeveloperAppInsightsApiKeySet": null,
                "publishingCredentials": null,
                "parameters": null,
                "allSettings": null,
                "storageResourceId": null
            }
        }
    ],
    "outputs": {}
}