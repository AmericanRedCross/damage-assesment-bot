{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "lib": [ "dom", "es2015" ],
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "baseUrl": "src",
        "paths": {
            "@/*": [ "./*" ],
            "@config": [ "./config/config.dev.ts" ],
            "@common/*": [ "../../common/src/*" ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "references": [
        { "path": "../common" }
    ]
}