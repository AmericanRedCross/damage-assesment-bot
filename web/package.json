{
  "scripts": {
    "clean": "rimraf dist",
    "dev": "npm run clean && npm run build-refs && cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "npm run clean && npm run build-refs && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build:dev": "npm run clean && npm run build-refs && cross-env NODE_ENV=development webpack --progress --hide-modules",
    "build-refs": "tsc --build ../common",
    "preinstall": "cd ../common && npm install",
    "postinstall": "npm run create-custom-config",
    "create-custom-config": "cd src/config && cpy config.custom.template.ts . --no-overwrite --rename=config.custom.ts"
  },
  "dependencies": {
    "adaptivecards": "1.0.0",
    "axios": "^0.18.0",
    "botframework-directlinejs": "^0.10.1",
    "botframework-webchat": "^4.1.0",
    "hoek": "^4.2.1",
    "native-promise-only": "^0.8.1",
    "normalize.css": "^8.0.1",
    "vue": "^2.5.11",
    "vue-component-decorator": "0.0.2",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1",
    "vuejs-datepicker": "^1.5.4"
  },
  "//": "**NOTE: hoek is an indirect dependency of the project, but the installed version has a security vulnerability that GitHub reports. We list it directly to control the version.",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "compression-webpack-plugin": "^2.0.0",
    "cpy-cli": "^2.0.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.4",
    "node-sass": "^4.9.3",
    "rimraf": "~2.6.2",
    "sass-loader": "^7.0.0",
    "ts-loader": "^4.4.2",
    "typescript": "^3.0.1",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.14"
  }
}
